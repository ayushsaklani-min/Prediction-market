{
  "name": "oraclex",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start:backend": "node backend/server.js",
    "start:frontend": "cd frontend-v2 && npm run dev",
    "build:frontend": "cd frontend-v2 && npm ci && npm run build",
    "compile": "npx hardhat compile",
    "compile:v2": "npx hardhat compile --config hardhat-v2.config.js",
    "test:hh": "npx hardhat test",
    "deploy:v2": "npx hardhat run scripts-v2/deploy-v2.js --network amoy",
    "create:demo": "npx hardhat run scripts-v2/create-demo-markets.js --network amoy",
    "subgraph:codegen": "cd subgraph && npm run codegen",
    "subgraph:build": "cd subgraph && npm run build",
    "subgraph:deploy": "cd subgraph && npm run deploy",
    "setup:all": "npm install && cd frontend-v2 && npm install && cd ../subgraph && npm install",
    "dev": "npm run start:frontend"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@supabase/supabase-js": "^2.39.3",
    "axios": "^1.7.7",
    "bad-words": "^3.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "hardhat-contract-sizer": "^2.10.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.10"
  }
}
